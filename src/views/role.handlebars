<h1>Users</h1>
<ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Upgrade/Downgrade</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    
     {{#each users}}
     <tr>
        <td> <div class="uid">{{this._id}}</div></td>
        <td>{{this.first_name}} {{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.role}}</td>
        <td>
            <button class="btn-primary" type="submit" data-id="{{this._id}}" onclick="changeRole('{{this._id}}', '{{this.email}}')">Upgrade to premium</button>
        </td>
        <td>
            <button class="btn-primary deleteBtn" type="submit" data-id="{{this._id}}" onclick="deleteUser('{{this._id}}', '{{this.email}}')">Delete User</button>
        </td>
        </tr>
     {{/each}} 
     
  </tbody>
</table>
    
    


</ul>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/userRole.js"></script>